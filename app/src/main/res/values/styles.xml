<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/launch_bg</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bold.22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Bold.22.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Regular.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Regular.16.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Regular.16.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>